
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta charset="utf-8">
    <title>時資有Way</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/img/TMGLOGO.png" rel="icon">
    <link href="~/img/TMGLOGO.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Poppins:300,400,500,700" rel="stylesheet">

    <!-- Bootstrap CSS File -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/tbutil.css">
    <link rel="stylesheet" type="text/css" href="~/css/tbmain.css">

</head>

<body>

    <!--==========================
    Header
    ============================-->
    <header id="header">
        <div class="container">

            <div id="logo" class="pull-left">
                <a href="#hero"><img src="~/img/TMGLOGO1.png" alt="" title="" /></a>
                <!-- Uncomment below if you prefer to use a text logo -->
                <!--<h1><a href="#hero">Regna</a></h1>-->
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li class="menu-active"><a href="#hero">Home</a></li>
                    <li class="menu-has-children">
                        <a href="#services">Services</a>
                        <ul>
                            <li><a href="/Event/timeList">Event Date / Time</a></li>
                            <li><a href="/Event/Statistics">Statistics</a></li>
                        </ul>
                    </li>
                    <li><a href="/Home/Login">Log in / Sign up</a></li>
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </header><!-- #header -->
    <!--==========================
      Hero Section
    ============================-->
    <section id="hero">
        <div class="hero-container">
            <h1>Welcome To <i class="fa fa-child"></i></h1>
            <img src="~/img/TMGLOGO1.png" style="width:30%" />
            <br />
            <h2 style="font-family: 'Microsoft JhengHei',  Arial, serif;">
                紀錄及檢視悄悄流逝的光陰 <br />
                讓時間有個紀錄的方法及管道
            </h2>
            <a href="#services" class="btn-get-started">Get Started</a>
        </div>
    </section><!-- #hero -->

    <main id="main">
        <!--==========================
      Services Section
    ============================-->
        <section id="services">
            <div class="container wow fadeIn">
                <div class="section-header">
                    <h3 class="section-title">Services</h3>
                    <p class="section-description"></p>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="box">
                            <div class="icon"><a href="/Event/timeList"><i class="fa fa-list-alt"></i></a></div>
                            <h4 class="title"><a href="/Event/timeList">Event Date / Time</a></h4>
                            <p class="description" style="font-family: 'Microsoft JhengHei',  Arial, serif;">可以檢視、新增、修改及刪除您的事件資料</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 wow fadeInUp" data-wow-delay="0.4s">
                        <div class="box">
                            <div class="icon"><a href="/Event/Statistics"><i class="fa fa-bar-chart"></i></a></div>
                            <h4 class="title"><a href="/Event/Statistics">Statistics</a></h4>
                            <p class="description" style="font-family: 'Microsoft JhengHei',  Arial, serif;">統計及分析您的時間運用</p>
                        </div>
                    </div>

                </div>

            </div>
        </section><!-- #services -->
    </main>

    <!--==========================
      Footer
    ============================-->
    <footer id="footer" style=" background-image: url(../img/logo5.png); background-repeat:no-repeat;background-position-x:100%;background-position-y:50%;background-size:15%;">
        <div class="footer-top">
            <div class="container">

            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>WON</strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/" target="_blank">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- #footer -->

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery-migrate.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/superfish/hoverIntent.js"></script>
    <script src="~/lib/superfish/superfish.min.js"></script>

    <!-- Contact Form JavaScript File -->
    <script src="~/contactform/contactform.js"></script>

    <!-- Template Main Javascript File -->
    <script src="~/js/main.js"></script>
    @{
        var logoutMsg = TempData["logoutMessage"] ?? string.Empty;
    }
    <script type="text/javascript">
     var message = '@logoutMsg';
     if (message) { alert(message);}
    </script>
</body>
</html>
